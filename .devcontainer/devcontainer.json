{
  "name": "Slim PHP Dev",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "slim",
  "workspaceFolder": "/workspace",
  "overrideCommand": false,
  "customizations": {
    "vscode": {
      "extensions": [
        "bmewburn.vscode-intelephense-client",
        "mehedidracula.php-namespace-resolver",
        "xdebug.php-debug"
      ]
    }
  },
  "forwardPorts": [8080],
  "remoteUser": "root",
  "postCreateCommand": "cd /workspace/server && composer install",
  "postStartCommand": "cd /workspace/server && nohup composer start > /workspace/server/composer.log 2>&1 &"
}
